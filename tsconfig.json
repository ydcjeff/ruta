{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"include": ["src", "*.js"],
	"exclude": ["dist"],
	"compilerOptions": {
		"lib": ["esnext"],
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"emitDeclarationOnly": true,
		"declaration": true,
		"verbatimModuleSyntax": true
	}
}
